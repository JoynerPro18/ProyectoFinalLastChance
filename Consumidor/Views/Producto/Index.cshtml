@{
    ViewBag.Title = "Productos";
}

<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="br-section-wrapper">

    <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo Producto</button>

    <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
        <thead class="thead-colored thead-primary">
            <tr>
                <th>ID Producto</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Categoría</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<div id="modal-record" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 400px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Detalles del Producto</h3>
            </div>
            <div class="modal-body">
                <form id="NewRecord" role="form">
                    <div>
                        <div class="form-group">
                            <label for="txtIdProducto" class="control-label">ID del Producto</label>
                            <input type="text" id="txtIdProducto" class="form-control" placeholder="ID del Producto" />
                        </div>
                        <div class="form-group">
                            <label for="txtNombreProducto" class="control-label">Nombre</label>
                            <input type="text" id="txtNombreProducto" class="form-control" placeholder="Nombre del Producto" />
                        </div>
                        <div class="form-group">
                            <label for="txtPrecioProducto" class="control-label">Precio</label>
                            <input type="text" id="txtPrecioProducto" class="form-control" placeholder="Precio del Producto" />
                        </div>
                        <div class="form-group">
                            <label for="txtCategoriaProducto" class="control-label">Categoría</label>
                            <input type="text" id="txtCategoriaProducto" class="form-control" placeholder="Categoría del Producto" />
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                        <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Producto.js"></script>
